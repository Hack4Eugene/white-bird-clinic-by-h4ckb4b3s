//- listing.pug

extends layout.pug 

block contents 
  style
    include ../public/stylesheets/listing.css

  a(href='/')
    div.purple-box
      div.inner-box
        img(src='../public/images/put-a-bird-on-it_preview.png').logo
        h1 THE HELP BOOK
        h3 A Platform for Care

      div.search
      include search.pug
      +search
      

  article.listings
    h2 Alphabetical listings
    each val in record.slice(0, 20)     
      section.service
        a(href='/listing/' + val._id)
          h3=val.Service_Name
          div.left
            div.address-1
              span.icon
                i.fa.fa-map-marker 
              span
                if !val.Physical_Site_Address_1
                  p='unavailable'
                else 
                  p=val.Physical_Site_Address_1 
                  span.address-2
                    p=val.Physical_Site_City + ', ' + val.Physical_Site_State + ' ' + val.Physical_Site_Zip
            div.phone
              span.icon
                i.fa.fa-phone
              p=val.Main_Phone

          div.right    
            div.email
              span.icon
                i.fa.fa-envelope
              a(href='mailto:' + val.Service_Location_Email).email email
            div.web
              span.icon
                i.fa.fa-link
              a(href=val.Web_Address).web web
            div.hours
              span.icon
                i.fa.fa-clock-o 
              p=(val.Hours_of_Operation).substr(0,15)
            